@{
    ViewData["Title"] = "Home Page";
}
<!--This is for Model Validations-->
@model LogReg.Models.User

<div id="CENTER" class="container col-sm-6">


    <div class="well">
        <!--TempData Error for session-->
        @{
            if( @ViewBag.sesErrors != null) {
                <p class="alert alert-danger">@ViewBag.sesErrors</p>
            }
        }
        <!--Errors from Reg-->
        @{
            if(@ViewBag.RegErrors != null )
            {   
                <p class="alert alert-danger">@ViewBag.RegErrors</p>
            }

        }
        <!--Errors from Models-->
        @{
            if(@ViewBag.RegErrors == null ) {


                if (!Html.ViewData.ModelState.IsValid )
                {
                    <div class="alert alert-danger" asp-validation-summary="All"></div>
                }
            }
        }
        <!--Register form-->
        <form asp-controller="LogReg" asp-action="register" method="post"  class="form-horizontal">
            <legend>Register</legend>
            <div class="form-group">
                <label asp-for="First_Name" class="col-sm-4 control-label">First Name</label>
                <div class="col-sm-8">
                    <input asp-for="First_Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Last_Name" class="col-sm-4 control-label">Last Name</label>
                <div class="col-sm-8">
                    <input asp-for="Last_Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" value="password" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Confirm_Password" class="col-sm-4 control-label">Confirm Password</label>
                <div class="col-sm-8">
                    <input asp-for="Confirm_Password" value="password" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-primary" type="submit">Register</button>
                </div>
            </div>
        </form>
        <!--Log In Form-->
        <form action="login" method="post"  class="form-horizontal">
            <legend>Login</legend>
            <!--Login errors in ViewBag-->
            @{
                if(@ViewBag.LogErrors != null )
                {   
                    <p class="alert alert-danger">@ViewBag.LogErrors</p>
                }
            }
            <div class="form-group">
                <label for="inputEmail3" type="email" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                    <input name="Email" class="form-control" id="inputEmail3"/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-4 control-label">Password</label>
                <div class="col-sm-8">
                    <input name="Password" value="password" type="password" class="form-control" id="inputPassword3"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>
        </form>
    </div> <!--Well ends here-->
</div> <!--Container ends here-->
