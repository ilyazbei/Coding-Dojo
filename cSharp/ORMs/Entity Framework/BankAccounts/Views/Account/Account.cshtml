@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="row">
        <div class="col-sm-7"><h3>Welcome, <span>@ViewBag.CurUser.firstName @ViewBag.CurUser.lastName</span></h3></div>
        <div class="col-sm-4"><h3>Current balance: $ <span>@ViewBag.CurUser.curBal.00</span></h3></div>
        <div class="col-sm-1"><h3><a href="/logout"><button class="btn btn-primary">Logout</button></a></h3></div>
    </div>
</div><hr>

<div id="CENTER" class="container col-sm-8">
    <div class="well col-sm-12">
        <!--Errors for invalid amount-->
        @{
            if(@ViewBag.amountError != null )
            {   
                <p class="alert alert-danger">@ViewBag.amountError</p>
            }

        }
        <!--Errors for Models-->
        @{
            @if(@ViewBag.ModelError != null )
            {   
                @foreach( var err in @ViewBag.ModelError ) {

                    <p class="alert alert-danger">@err</p>
                }
            }

        }
        
        <form action="DepWith" method="POST" class="form-inline">
            
            <label for="DepWith" class="control-label">Deposit/Withdraw: </label>
            <input name="depWith" type="number" id="DepWith" class="form-control"> 
            
            &nbsp &nbsp &nbsp &nbsp<button type="submit" class="btn btn-info">Submit</button>
        </form><br>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach( var trans in @ViewBag.allActivities ) {
                    <tr>                        
                        <th>$@trans.depWith.00</th>
                        <th>@trans.createdAt.ToString("dddd, d MMMM yyyy 'at' hh:mm:ss tt")</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>