<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css">
  </head>
    <title>Dojo Survey Result</title>
</head>
<body>
    <div class="ui center aligned container">
        @foreach(var error in ViewBag.Errors)
        {
            <p class="red">@error</p>
        }
        <legend></legend>
        <form class="ui form" action="/process" method="post">
            <div class="inline field">
                <label>Your Name</label>
                <input type="text" name="Name" placeholder="Enter Your Name ...">
            </div>
            <div class="inline field">
                <label >Dojo Location</label>
                <select class="ui selection dropdown" name="Location">
                    <option value="">Locations</option>
                    <option value="SandJose">San Jose</option>
                    <option value="Seattle">Seattle</option>
                    <option value="LosAngeles">Los Angeles</option>
                    <option value="SiliconValley">Silicon Valley</option>
                </select>
            </div>
            <div class="inline field">
                <label>Favorite Language</label>
                <select class="ui selection dropdown" name="Language">
                    <option value="">Languages</option>
                    <option value="Python">Python</option>
                    <option value="Mean">Mean</option>
                    <option value="JS">Java Script</option>
                    <option value="cSharp">C#</option>
                </select>
            </div>
            <div class="ui form">
                <div class="field">
                    <label>Comment (optional)</label>
                    <textarea name="Comment"></textarea>
                </div>
            </div>            
            <button class="ui button blue" type="submit">Submit</button>
        </form>
    </div>
</body>
</html>